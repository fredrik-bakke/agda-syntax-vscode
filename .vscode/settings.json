{
  "[json][json-tmlanguage][jsonc]": {
    "editor.quickSuggestions": {
      "strings": true
    },
    "editor.suggest.insertMode": "replace",
    "editor.tabSize": 2,
    "gitlens.codeLens.scopes": ["document"]
  },
  "[markdown]": {
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.autoClosingBrackets": "never",
    "editor.quickSuggestions": {
      "comments": "off",
      "other": "off",
      "strings": "off"
    },
    "editor.unicodeHighlight.ambiguousCharacters": false,
    "editor.unicodeHighlight.invisibleCharacters": false,
    "editor.wordWrap": "on"
  },
  "[yaml][yaml-tmlanguage]": {
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.autoIndent": "advanced",
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "gitlens.codeLens.scopes": ["document"]
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "editor.trimAutoWhitespace": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "*.tmLanguage": "${capture}.tmLanguage.j2.yml, ${capture}.tmLanguage.yml, ${capture}.tmLanguage.json",
    "*.tmLanguage.j2.yml": "${capture}.tmLanguage.yml, ${capture}.tmLanguage.json",
    "*.tmLanguage.yml": "${capture}.tmLanguage.json"
  }
}
